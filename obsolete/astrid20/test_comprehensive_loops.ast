void main(){
    int8 result = 0;
    
    // Test 1: Less than (should loop 3 times)
    int8 i = 0;
    for(i = 0; i < 3; i++){
        result = result + 1;
    }
    // result should be 3, i should be 3
    
    // Test 2: Equality (should loop once)
    result = 0;
    for(i = 5; i == 5; i++){
        result = result + 10;
    }
    // result should be 10, i should be 6
    
    // Test 3: Not equal (should loop until i becomes 10)
    result = 0;
    for(i = 7; i != 10; i++){
        result = result + 1;
    }
    // result should be 3 (iterations: i=7,8,9), i should be 10
    
    halt();
}
